<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: borde degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#4a04e1"
                android:endColor="#240071"
                android:type="linear" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Capa 2: fondo interno con margen -->
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- color del fondo interno -->
            <corners android:radius="44dp" /> <!-- menor al radio externo -->
        </shape>
    </item>

</layer-list>
